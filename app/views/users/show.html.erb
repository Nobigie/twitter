<% provide(:title, @user.name + ' information') %>
<div class="row">
    <div class="col-md-3">
      <div class="col-md-4">
        <%= gravatar_for @user %>
      </div>
      <div class="col-md-6">
        <%= @user.name %>
        <br/>
        <% if current_user?(@user) %>
          <%= link_to "Edit profile", edit_user_path(current_user) %>
        <% end %>
      </div>


      <% if current_user?(@user) %>
        <div class="col-md-12">
          <%= render 'shared/micropost_form' %>
        </div>
      <% end %>













    </div>
  <div class="col-md-9">
    <div class="col-md-9">
      <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="list-group">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
    </div>
  </div>
</div>