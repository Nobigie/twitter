<% provide(:title, @title) %>
<% provide(:title, @user.name + ' information') %>
<div class="row">
  <div class="col-md-3">
    <div class="col-md-4">
      <%= gravatar_for @user, 80 %>
    </div>
    <div class="col-md-6">
      <%= @user.name %>
      <br>
      <% if current_user?(@user) %>
        <%= link_to "Edit profile", edit_user_path(current_user) %>
      <% end %>
      <br>
      <% if @user.microposts.any? %>
        <%= @user.microposts.count %> Microposts
      <% end %>
    </div>
    <div class="col-md-6">
      <%= render 'shared/follow_form' if signed_in? %>
    </div>
    <div class="col-md-12">
      <%= render 'shared/stats' %>
    </div>
    <% if @users.any? %>
      <div class="col-md-12">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user,30) %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="col-md-9">
      <h3><%= @title %></h3>
      <ul class="users">
        <% @users.each do |user| %>
          <li style="margin-bottom: 9pt">
            <%= gravatar_for user,50 %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
      <%= will_paginate %>
    </div>
  </div>
</div>

