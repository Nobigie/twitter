<li class="list-group-item" id="<%= feed_item.id %>">
  <div class="row">
    <div class="col-md-2">
      <%= link_to gravatar_for(feed_item.user,50), feed_item.user %>
    </div>
    <div class="col-md-9">
        <%= link_to feed_item.user.name, feed_item.user %> <small style="color: #d3d3d3;">| Posted <%= time_ago_in_words(feed_item.created_at) %> ago. |
        <% if current_user?(feed_item.user) %>
            <%= link_to "Delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
        <% end %>
        </small>
        <br>
        <%= feed_item.content %>
    </div>
   </div>
</li>